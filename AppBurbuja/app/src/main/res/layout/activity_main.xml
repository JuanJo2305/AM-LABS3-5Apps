<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kotlin Ordenamiento Burbuja"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:id="@+id/etValor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor 1"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor 2"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor 3"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValor4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor 4"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/etValor5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor 5"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btnOrdenar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ordenar Ascendente"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btnOrdenarDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ordenar Descendente"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id ="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado aquÃ­:"
        android:textAlignment="center"
        />

</LinearLayout>