<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de Asistencia en Kotlin"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>

    <!-- Campo para el Código de Alumno -->
    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código de Alumno"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <!-- Campo para Nombre de Alumno -->
    <EditText
        android:id="@+id/etNombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Alumno"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnMarcarAsistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marcar Asistencia"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvAsistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="16sp"/>

</LinearLayout>
